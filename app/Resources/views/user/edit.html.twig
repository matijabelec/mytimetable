{% extends '_layout/default.html.twig' %}

{% block content %}
    <h1>User edit</h1>
    
    <button class="mdl-button mdl-js-button mdl-button--icon" onclick="location.href='{{ path('user_index') }}'">
        <i class="material-icons">view_list</i>
    </button>
        
    <div class="content-grid mdl-grid">
        <div class="mdl-layout-spacer"></div>
        <div class="mdl-card mdl-shadow--2dp">
            {{ form_start(edit_form) }}
            <div class="mdl-card__title">
               <h2 class="mdl-card__title-text">User details</h2>
            </div>
            <div class="mdl-card__supporting-text">
                {{ form_widget(edit_form) }}
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored">Save</button>
            </div>
            {{ form_end(edit_form) }}
            
            <div class="mdl-card__menu">
                {{ form_start(delete_form) }}
                    <button type="submit" class="mdl-button mdl-js-button mdl-button--icon mdl-button--raised">
                        <i class="material-icons">delete</i>
                    </button>
                {{ form_end(delete_form) }}
            </div>
        </div>
        <div class="mdl-layout-spacer"></div>
    </div>
{% endblock %}
