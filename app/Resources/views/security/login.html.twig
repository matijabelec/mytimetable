{# app/Resources/views/security/login.html.twig #}
{% extends '_layout/fullform.html.twig' %}

{% block content %}
    <div class="mdl-layout mdl-layout__content">
        <div class="page-content">
            
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        
            <form action="{{ path('login') }}" method="post">
                <div class="content-grid mdl-grid">
                    <div class="mdl-layout-spacer"></div>
                    <div id="login-form" class="mdl-card mdl-shadow--2dp">
                        <div class="mdl-card__title">
                           <h2 class="mdl-card__title-text">Login</h2>
                        </div>
                        <div class="mdl-card__supporting-text">
                            {% if error %}
                                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            
                            <div class="mdl-textfield mdl-js-textfield">
                                <input class="mdl-textfield__input" type="text" id="username" name="_username" value="{{ last_username }}" />
                                <label class="mdl-textfield__label" for="username">Username:</label>
                            </div>
                            
                            <div class="mdl-textfield mdl-js-textfield">
                                <input class="mdl-textfield__input" type="password" id="password" name="_password" />
                                <label class="mdl-textfield__label" for="password">Password:</label>
                            </div>
                        </div>
                        <div class="mdl-card__actions mdl-card--border">
                            <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored">Log In</button>
                        </div>
                    </div>
                    <div class="mdl-layout-spacer"></div>
                </div>
            </form>
        </div>
    </div>
{% endblock content %}
